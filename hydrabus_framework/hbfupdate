#!/usr/bin/env python

import os

from hydrabus_framework.core.utils.HBFUpdate import HBFUpdate
from hydrabus_framework.utils.logger import Logger


__author__ = "Jordan Ovr√® <ghecko78@gmail.com>"


if __name__ == '__main__':
    if os.geteuid() != 0:
        Logger().handle("Please run 'hbfupdate' as root. Exiting...", Logger.ERROR)
        exit(1)
    print('----------------------------------------------------------------------')
    print('----------------Retrieve and install available modules----------------')
    print('----------------------------------------------------------------------')
    HBFUpdate().update(update_framework=True)
